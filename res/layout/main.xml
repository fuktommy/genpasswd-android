<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<!-- Domain Field -->
<TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@+string/domain_label"
    />
<EditText
    android:id="@+id/domain_field"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:hint="@+string/domain_hint"
    android:inputType="textAutoComplete"
    android:freezesText="true"
    />

<!-- Passphrase Field -->
<TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@+string/passphrase_label"
    />
<EditText
    android:id="@+id/passphrase_field"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:hint=""
    android:inputType="textPassword"
    android:freezesText="true"
    />

<!-- Generate Button -->
<Button
    android:id="@+id/generate_button"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@+string/generate_label"
    />

<!-- Salt Field -->
<TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@+string/salt_label"
    />
<EditText
    android:id="@+id/salt_field"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:hint="@+string/salt_hint"
    android:inputType="textAutoComplete"
    android:freezesText="true"
    />

<!-- Charactor Set Field -->
<TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:text="@+string/charactor_label"
    />
<Spinner
    android:id="@+id/charactor_field"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:entries="@+array/charactor_labels"
    />

<!-- Length Field -->
<TextView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="@+string/length_label"
    />
<Spinner
    android:id="@+id/length_field"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:entries="@+array/length_labels"
    />

</LinearLayout>
